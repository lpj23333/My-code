#include <stdio.h>
#include <stdlib.h>
#include <time.h>


int main()
{
	srand(time(0));
	int number = rand()%100+1;
	int count = 0;
	int a = 0;
	printf("我已经想好了一个1到100之间的数"); 
	do{
		printf("请猜一猜这个1到100的数"); 
		scanf("%d" , &a);
		count ++;
		if(a > number){
			printf("您输入的数大了"); 
		}
		if(a < number){
			printf("您输入的数小了");
		}
	} while ( a != number);
	printf("您用%d次得到了答案", count);
	
	return 0;
	
	
}
