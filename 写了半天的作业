#include <stdio.h>
int main()
{
	double I,s;
	
	printf("请输入利润"); 
	scanf("%lf",&I);
	
	if(I<=400000){
		if(I<=400000&&I>200000){
			s=(I-200000.0)*0.05+100000*0.1+100000*0.075;
		}
		else{
			if(I<=200000&&I>100000){
				s=(I-100000.0)*0.075+10000; 
			}
			else{
				s=I*0.1;
			}
		}
	}
	else{
		if(I<=600000){
			s=(I-400000.0)*0.03+100000*0.1+100000*0.075+200000*0.05; 
		}
		else{
			if(I>600000&&I<=1000000){
				s=(I-600000.0)*0.015+200000*0.03+200000*0.05+100000*0.075+10000*0.1;
			}
			else{
				s=(I-1000000.0)*0.01+100000*0.1+100000*0.075+200000*0.05+200000*0.05+200000*0.03+400000*0.015;
			}
		}
	}
	printf("发奖金总数为%f",s);
 } 
